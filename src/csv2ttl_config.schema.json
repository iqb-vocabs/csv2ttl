{
  "$id": "https://w3id.org/iqb/vocabs/csv2ttl_config.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Csv2Ttl Config",
  "description": "Configuration file to transform csv vocabularies into ttl files",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[0-9a-zA-Z_]+$",
      "description": "Identifier for the set of vocabularies as part of the uri"
    },
    "creator": {
      "type": "string",
      "description": "Creator as person or institution"
    },
    "title": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "lang": {
            "type": "string",
            "pattern": "^[a-z]+$",
            "description": "Language of the value"
          },
          "value": {
            "type": "string",
            "description": "Language of the value"
          }
        },
        "required": ["lang", "value"]
      },
      "minItems": 1
    },
    "csv_delimiter": {
      "type": "string",
      "enum": [
        ",",
        ";"
      ],
      "default": ";",
      "description": "CSV is not a strict standard, so the delimiter is not fixed and must be declared."
    },
    "base": {
      "type": "string"
    },
    "vocabularies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[0-9a-zA-Z_]+$",
            "description": "Identifier for the vocabulary as part of the uri"
          },
          "title": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "lang": {
                  "type": "string",
                  "pattern": "^[a-z]+$",
                  "description": "Language of the value"
                },
                "value": {
                  "type": "string",
                  "description": "Language of the value"
                }
              },
              "required": ["lang", "value"]
            },
            "minItems": 1,
            "description": "Title of vocabulary"
          },
          "description": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "lang": {
                  "type": "string",
                  "pattern": "^[a-z]+$",
                  "description": "Language of the value"
                },
                "value": {
                  "type": "string",
                  "description": "Language of the value"
                }
              },
              "required": ["lang", "value"]
            },
            "description": "Description of vocabulary"
          }
        },
        "required": ["id", "title"]
      },
      "minItems": 1
    }
  },
  "required": ["id", "title", "creator", "vocabularies"]
}
