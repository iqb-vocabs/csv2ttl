{
  "$id": "https://w3id.org/iqb/vocabs/csv2ttl_config.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Csv2Ttl Config",
  "description": "Configuration file to transform csv vocabularies into ttl files",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[0-9a-zA-Z_]+$",
      "description": "Identifier for the set of vocabularies as part of the uri"
    },
    "title": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "lang": {
            "type": "string",
            "pattern": "^[a-z]+$",
            "description": "Language of the value"
          },
          "value": {
            "type": "string",
            "description": "Language of the value"
          }
        },
        "required": ["lang", "value"]
      },
      "minItems": 1
    },
    "vocabularies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[0-9a-zA-Z_]+$",
            "description": "Identifier for the vocabulary as part of the uri"
          },
          "filename": {
            "type": "string",
            "description": "Name of the CSV file containing the voc entries"
          },
          "title": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "lang": {
                  "type": "string",
                  "pattern": "^[a-z]+$",
                  "description": "Language of the value"
                },
                "value": {
                  "type": "string",
                  "description": "Language of the value"
                }
              },
              "required": ["lang", "value"]
            },
            "minItems": 1,
            "description": "Title of vocabulary"
          },
          "description": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "lang": {
                  "type": "string",
                  "pattern": "^[a-z]+$",
                  "description": "Language of the value"
                },
                "value": {
                  "type": "string",
                  "description": "Language of the value"
                }
              },
              "required": ["lang", "value"]
            },
            "description": "Description of vocabulary"
          }
        },
        "required": ["id", "filename", "title"]
      },
      "minItems": 1
    }
  },
  "required": ["id", "title", "vocabularies"]
}
